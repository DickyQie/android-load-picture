<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhangqie.networkimageloading">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".httpurlconnection.HttpConnectionActivity"></activity>
        <activity android:name=".httpclients.HttpClientsActivity"></activity>
        <activity android:name=".okhttp.OkHttpActivity"></activity>
        <activity android:name=".volley.VolleyActivity"></activity>
        <activity android:name=".xutis.XUtilsActivity"></activity>


    </application>

</manifest>